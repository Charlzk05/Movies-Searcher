<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Charlzk Movies Searcher - <%- name %></title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='search.css'>
</head>
<body>
    <div class="main">
        <div class="header">
            <h3>Results for <%- name %></h3>
            <div class="searchBar" 
                <form method="get" action="http://localhost:3000/search" >
                    <input name="name" type="text" placeholder="Search">
                    <input type="submit" value="Search">
                </form>
            </div>
        </div>
        <div class="listContainer">
            <div class="semiHeader">
                <h3>Movies</h3>
            </div>
            <div class="list">
                <% results.forEach((item) => { %>
                    <div class="item">
                        <img src='<%- item["i"]["imageUrl"] %>'>
                        <div class="info">
                            <p class="title"><%- item["l"] %></p>
                            <p class="type"><%- item["q"] %></p>
                            <p>Rank: <span class="rank"><%- item["rank"] %></span></p>
                            <p>Year: <span class="year"><%- item["y"] %></span></p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <script src='search.js'></script>
</body>
</html>